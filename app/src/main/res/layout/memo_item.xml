<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/card_content_margin"
        android:paddingRight="@dimen/card_content_margin"
        android:paddingTop="@dimen/card_content_margin">

        <TextView
            android:id="@+id/memo_title"
            android:text="标题标题"
            android:maxLines="1"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_content_margin"
            android:textColor="#dd000000"/>
        
        <TextView
            android:text="标题标题\n标题标题\n标题标题\n标题标题"
            android:id="@+id/memo_content"
            android:maxLines="4"
            android:minLines="4"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#89000000"
            android:layout_marginBottom="@dimen/card_content_margin"/>

        <TextView
            android:text="1月28日"
            android:id="@+id/memo_date"
            android:maxLines="1"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_content_margin"
            android:textColor="#42000000"/>
    </LinearLayout>

</android.support.v7.widget.CardView>