<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TimeLine">
        <item name="lineWidth">8dp</item>
        <item name="dotPosition">32dp</item>
        <item name="dotSize">12dp</item>
        <item name="android:color">#ef5350</item>
    </style>

    <style name="cpunch_image_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/margin_16</item>
        <item name="android:layout_marginRight">@dimen/margin_16</item>
    </style>

    <style name="cpunch_item_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
    </style>

    <style name="cpunch_item_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_54</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
    </style>
</resources>
